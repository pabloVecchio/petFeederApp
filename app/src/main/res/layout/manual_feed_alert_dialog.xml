<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_manualFeed"
        android:layout_width="281dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Escoja la cantidad"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_manualFeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_manualFeed"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="281dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:max="7"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_manualFeed" />

</android.support.constraint.ConstraintLayout>